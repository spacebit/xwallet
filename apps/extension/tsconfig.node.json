{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "vite.config.ts",
    "vite.config.js",
    "vitest.config.ts",
    "vitest.config.js",
    "cypress.config.ts",
    "cypress.config.js",
    "nightwatch.conf.ts",
    "nightwatch.conf.js",
    "playwright.config.ts",
    "playwright.config.js"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
